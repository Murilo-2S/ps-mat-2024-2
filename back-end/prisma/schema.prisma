generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Car {
  id                       Int           @id @default(autoincrement())
  brand                    String        // Marca do carro
  model                    String        // Modelo do carro
  color                    String        // Cor do carro
  year_manufacture         Int           // Ano de fabricação
  imported                 Boolean       // Se o carro é importado ou não
  plates                   String        // Placas do carro
  selling_date             DateTime?     // Data de venda; preenchimento opcional
  selling_price            Decimal?      // Preço de venda; preenchimento opcional
}

model Customer {
  id                       Int           @id @default(autoincrement())
  name                     String        // Nome do cliente
  ident_document           String        // Documento de identificação do cliente
  birth_date               DateTime      // Data de nascimento do cliente
  street_name              String        // Nome da rua do cliente
  house_number             String        // Número da casa do cliente
  complements              String?       // Complemento do endereço; preenchimento opcional
  municipality             String        // Município do cliente
  state                    String        // Estado do cliente
  phone                    String        // Telefone do cliente
  email                    String        // E-mail do cliente
}

model User {
  id                       Int           @id @default(autoincrement())
  fullname                 String        // Nome completo
  username                 String        @unique // Não pode repetir
  email                    String        @unique
  password                 String        // Senha do usuário
  is_admin                 Boolean       @default(false) // Se o usuário é administrador ou não
}